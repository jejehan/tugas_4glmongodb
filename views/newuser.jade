extends layout

block content
    title=title
    .container
        h1= title
        .row
            .col-md-8
                form#formAddUser(name="adduser",method="post",action="/users/adduser",role="form")
                    .form-group
                        label(for="inputUsername"). Username
                        input#inputUserName(type="text", placeholder="NPM", name="npm",class="form-control",size="30")
                    .form-group
                        label(for="inputName"). Name
                        input#inputName(type="text", placeholder="NAMA", name="nama",class="form-control",size="30")
                    .form-group
                        label(for="inputPassword"). Name
                        input#inputPassword(type="password", placeholder="PASSWORD", name="password",class="form-control",size="30")
                    .form-group
                        label(for="inputConfirmPassword"). Name
                        input#inputConfirmPassword(type="password", placeholder="CONFIRM PASSWORD", name="confirmpass",class="form-control",size="30")    
                    
                    button#btnSubmit(type="submit",class="btn btn-submit") submit
            .col-md-4
                